<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CopyNPaste</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/copy.css" asp-append-version="true" />

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <style>
        .rtl {
            direction: rtl;
        }

        .ltr {
            direction: ltr;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CopyNPaste</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            var isEnglish = true;
            var $formBlock = $('#formBlock');

            var $preElement = $formBlock.find('pre');


            function toggleLanguage() {
                console.log("before");
                if (isEnglish) {
                    $('body').removeClass('ltr').addClass('rtl');
                    $('#toggleLanguageButton').val('Toggle Language (English)');
                    $preElement.removeClass('ltr').addClass('rtl');

                    isEnglish = false;
                } else {
                    $('body').removeClass('rtl').addClass('ltr');
                    $('#toggleLanguageButton').val('Toggle Language (Hebrew)');
                    $preElement.removeClass('rtl').addClass('ltr');

                    isEnglish = true;
                }
            }
            $("#toggleLanguageButton").click(toggleLanguage);

        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
